    },
    {
      "review_id": "HklmZ1xqhm",
      "sentence_index": 18,
      "text": "Weaknesses:",
      "suffix": "\n",
      "review_action": "arg_structuring",
      "fine_review_action": "arg-structuring_heading",
      "aspect": "none",
      "polarity": "none"
    },
    {
      "review_id": "HklmZ1xqhm",
      "sentence_index": 19,
      "text": "-\tComputational budget required is massive.",
      "suffix": "",
      "review_action": "arg_evaluative",
