      "details": {}
    },
    {
      "review_id": "B1g0bJk5h7",
      "rebuttal_id": "rylwcjykCX",
      "sentence_index": 4,
      "text": "However, our work differs in two major ways:",
      "suffix": "\n\n",
      "rebuttal_stance": "dispute",
