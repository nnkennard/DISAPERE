    },
    {
      "review_id": "ryegpfeaYS",
      "rebuttal_id": "SJlzQjkXjB",
      "sentence_index": 18,
      "text": "One could hope for a higher compression ratio.",
      "suffix": "",
      "rebuttal_stance": "concur",
      "rebuttal_action": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          11
